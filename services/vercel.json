{
  "version": 2,
  "builds": [
    { "src": "index.ts", "use": "@vercel/node" },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "rewrites": [
    { "src": "/api/(.*)", "dest": "/index.ts" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}