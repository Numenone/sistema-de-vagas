// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Usuario {
  id           Int            @id @default(autoincrement())
  nome         String
  email        String         @unique
  senha        String
  tipo         String // candidato, lider, admin
  empresaId    Int?
  fotoPerfil   String?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  resetPasswordToken   String?
  resetPasswordExpires DateTime?

  empresa      Empresa?       @relation(fields: [empresaId], references: [id])
  candidaturas Candidatura[]
  vagasFavoritas Vaga[]         @relation("VagasFavoritas")
}

model Empresa {
  id        Int       @id @default(autoincrement())
  nome      String
  descricao String
  logo      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  lideres   Usuario[]
  vagas     Vaga[]
}

model Vaga {
  id           Int           @id @default(autoincrement())
  titulo       String
  descricao    String
  requisitos   String
  salario      Float
  ativa        Boolean       @default(true)
  modalidade   String        @default("Presencial")
  tipoContrato String        @default("CLT")
  empresaId    Int
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  empresa      Empresa       @relation(fields: [empresaId], references: [id])
  candidaturas Candidatura[]
  favoritedBy  Usuario[]     @relation("VagasFavoritas")
  habilidades  Habilidade[]
}

model Candidatura {
  id          Int      @id @default(autoincrement())
  usuarioId   Int
  vagaId      Int
  descricao   String
  status      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  usuario     Usuario  @relation(fields: [usuarioId], references: [id])
  vaga        Vaga     @relation(fields: [vagaId], references: [id])
}

model Habilidade {
  id    Int    @id @default(autoincrement())
  nome  String @unique
  vagas Vaga[]
}
